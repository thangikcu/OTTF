<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    tools:context=".PlayActivity">

    <include
        android:id="@+id/iclHeader"
        layout="@layout/header" />

    <TextView
        android:id="@+id/tvHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:drawableEnd="@drawable/ic_heart"
        android:drawableRight="@drawable/ic_heart"
        android:text="4 "
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iclHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textColor="@color/colorTextPrimary"
        android:textSize="32sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvImage"
        android:layout_width="256dp"
        android:layout_height="170dp"
        android:layout_below="@id/tvScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imgThing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/img_thing" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvVietnamese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Trá»‘ng"
        android:textColor="@color/colorTextPrimary"
        android:textSize="24sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:columnCount="2">

        <Button
            android:id="@+id/btnAnswerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_btn_answer"
            android:text="A"
            android:textColor="@color/colorTextSecondary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAnswerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_btn_answer"
            android:text="B"
            android:textColor="@color/colorTextSecondary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAnswerC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_btn_answer"
            android:text="C"
            android:textColor="@color/colorTextSecondary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAnswerD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_btn_answer"
            android:text="D"
            android:textColor="@color/colorTextSecondary"
            android:textSize="18sp" />

    </GridLayout>

</RelativeLayout>