<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/img_logo" />

    <Button
        android:id="@+id/btnLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_learn_selector" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLearn"
        android:layout_marginTop="26dp"
        android:background="@drawable/btn_play_selector" />


    <ToggleButton
        android:id="@+id/tgbSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="62dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="62dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/tgb_sound"
        android:minWidth="48dp"
        android:textOff=""
        android:textOn="" />

    <Button
        android:id="@+id/btnInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:layout_toEndOf="@+id/tgbSound"
        android:layout_toRightOf="@+id/tgbSound"
        android:background="@drawable/btn_information_selector"
        android:minWidth="48dp" />

</RelativeLayout>